# ========== OPÃ‡ÃƒO 1 ==========
def scanner_sni():
    clear()
    host=input("Host/SNI: ")
    try:
        ctx=ssl.create_default_context()
        s=ctx.wrap_socket(socket.create_connection((host,443),5),server_hostname=host)
        print(G+"\n[âœ”] SNI FUNCIONANDO")
        print(C+"TLS:",s.version())
        s.close()
    except Exception as e:
        print(R+"\n[âœ–] ERRO:",e)
    input("\nENTER...")

# ========== OPÃ‡ÃƒO 2 ==========
def dns_finder():
    clear()
    target=input("DomÃ­nio ou IP: ")
    try:
        ips=socket.gethostbyname_ex(target)[2]
        print(G+"\nIPs encontrados:")
        for ip in ips:
            print(C+" -",ip)
    except:
        print(R+"Erro DNS")

    try:
        ctx=ssl.create_default_context()
        s=ctx.wrap_socket(socket.create_connection((target,443),5),server_hostname=target)
        cert=s.getpeercert()
        print(Y+"\nSNIs (SAN):")
        for t,n in cert.get("subjectAltName",[]):
            if t=="DNS":
                print(" -",n)
        s.close()
    except:
        print(R+"Sem TLS/SNI")
    input("\nENTER...")

# ========== OPÃ‡ÃƒO 3 ==========
def payload_gen():
    clear()
    host=input("Host/SNI: ")
    print(G+"\nPAYLOAD WEBSOCKET:\n"+X)
    print(f"GET / HTTP/1.1\nHost: {host}\nUpgrade: websocket\nConnection: Upgrade\n\n")
    input("ENTER...")

# ========== OPÃ‡ÃƒO 4 ==========
def scan_ip(ip):
    try:
        s=ssl.create_default_context().wrap_socket(
            socket.create_connection((str(ip),443),2),
            server_hostname=str(ip)
        )
        print(G+"[LIVE]",ip)
        s.close()
    except:
        pass

def cidr_scan():
    clear()
    cidr=input("CIDR (ex: 104.16.0.0/24): ")
    try:
        net=ipaddress.ip_network(cidr, strict=False)
        print(Y+"\nScanning",net.num_addresses,"IPs...\n"+X)
        threads=[]
        for ip in net:
            t=threading.Thread(target=scan_ip,args=(ip,))
            t.start()
            threads.append(t)
        for t in threads:
            t.join()
    except Exception as e:
        print(R+"Erro:",e)
    input("\nENTER...")

# ========== MODO HACKER ==========
