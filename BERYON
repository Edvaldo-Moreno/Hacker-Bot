import os, sys, time, ssl, socket, random, ipaddress, threading

# CORES
G="\033[1;32m"; R="\033[1;31m"; C="\033[1;36m"
Y="\033[1;33m"; W="\033[1;37m"; X="\033[0m"

def clear():
    os.system("clear")

def slow(text, d=0.015):
    for c in text:
        sys.stdout.write(c)
        sys.stdout.flush()
        time.sleep(d)
    print()

# âš¡ ANIMAÃ‡ÃƒO PESADA DE ENTRADA
def thunder():
    frames = [
        R+"âš¡âš¡âš¡ SYSTEM OVERRIDE âš¡âš¡âš¡"+X,
        Y+"â–ˆâ–ˆâ–ˆâ–ˆ SYSTEM BREACH â–ˆâ–ˆâ–ˆâ–ˆ"+X,
        C+"///// LOADING DARK CORE /////"+X,
        R+"â˜  â˜  â˜  ACCESSING CORE â˜  â˜  â˜ "+X
    ]
    for _ in range(8):
        clear()
        print(random.choice(frames))
        time.sleep(0.12)

